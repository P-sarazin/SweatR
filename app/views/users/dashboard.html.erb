<div class="top-container">
  <h1>Hello <%= current_user.name %></h1>
</div>
<div class="bottom-container">
  <div class="bottom-left-container">
    <h3>Your booked session:</h3>
    <ul>
      <% @bookings.each do |booking| %>
        <li><%= booking.lesson.name %> :
          <% if booking.lesson.appointment.strftime('%A') == Time.now.strftime('%A') %>
            <p>Today at <%= (9..20).to_a.sample %>h00</p>
          <% else %>
            <p>Next <%= booking.lesson.appointment.strftime('%A') %> at <%= (9..20).to_a.sample %>h00</p>
          <% end %>
        </li>
      <% end %>
    </ul>
    <button href="#">Book another session</button>
  </div>
  <div class="bottom-right-container">
    <h3>Your performances</h3>
    <h4>Calories = <%= (rand() * 16000).round %></h4>
  </div>
</div>
