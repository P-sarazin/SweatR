<div class="lesson-show">
  <div class="btn-group exercise-list">
    <div class="dropdown dropdown-exercise">
      <button class="exercise exercise-active dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Intro
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenu1">
        <div class="description-container">
            <p>👋 Program presentation</p>
            <p>👋 Exercises demonstration</p>
        </div>
      </div>
    </div>
    <div class="dropdown dropdown-exercise">
      <button class="exercise dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Warm up
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenu1">
        <div class="description-container">
            <h3>❹ repetitions:</h3>
            <p>👉 BACK LUNGE x 100</p>
            <p>👉 FRONT LUNGE x 100</p>
            <p>👉 PUSH UPS x 50</p>
            <p>👉 BURPEES x 25</p>
        </div>
      </div>
    </div>
    <div class="dropdown dropdown-exercise">
      <button class="exercise dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Tabata
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenu1">
        <div class="description-container">
            <h3>❹ repetitions:</h3>
            <p>👉 PUSHUP-TO-SIDE PLANK 20sec</p>
            <p>😴 Rest 10 sec</p>
            <p>👉 JUMPING JACKS 20sec</p>
            <p>😴 Rest 10 sec</p>
            <p>👉 JUMP SQUATS 20sec</p>
            <p>😴 Rest 10 sec</p>
            <p>👉 COUNT-BURPEES 20sec</p>
            <p>😴 Rest 10 sec</p>
        </div>
      </div>
    </div>
    <div class="dropdown dropdown-exercise">
      <button class="exercise dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Boxing sequence
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenu1">
        <div class="description-container">
            <h3>❷ repetitions:</h3>
            <p>👉 100 JABS</p>
            <p>👉 100 HOOKS</p>
            <p>👉 100 UPPERCUTS</p>
            <p>👉 SHADOW BOXING 3 min</p>
            <p>👉 PLANK 2 min</p>
        </div>
      </div>
    </div>
    <div class="dropdown dropdown-exercise">
      <button class="exercise dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Stretching
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenu1">
        <div class="description-container">
            <p>👉 Legs</p>
            <p>👉 Arms</p>
            <p>👉 Full rest</p>
            <p>🏆 The end</p>
        </div>
      </div>
    </div>
  </div>
    <div class="video-and-description">
      <div class="video-container">
          <div id="remote-video-container" data-current-user-id="<%= current_user.id %>">
            <div class="video-grid">
              <video id="local-video" autoplay ></video>
            </div>
          </div>
            <div class="play-button">
              <a id="join-button" class="play-btn" href="#"></a>
            </div>

        <div class="dropdown-menu">
          <div class="classes-description">
            <h3><strong>Repetition 1 💪 - x4</strong></h3>
              <div class="description-container">
                  <p>👉 30sec Back Lunge + 30sec Jumping Jacks + 30sec Front Lunge</p>
                  <p>👉 5x Burpees</p>
                  <p>👉 30sec rest</p>
              </div>
          </div>
        </div>
      </div>
    </div>
    <div class="button-container">
      <div class="btn-dashboard">
        <button type="button" class="btn btn-ghost retour" data-toggle="modal" data-target="#reviewModalCenter">
        Finish my class
        </button>
      </div>
    </div>
</div>
<div class="modal fade" id="reviewModalCenter" tabindex="-1" role="dialog" aria-labelledby="reviewModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="reviewModalLongTitle">How was your lesson?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for([@lesson, @booking]) do |f| %>
          <%= f.input :review_rating, collection: (1..5).to_a, label: "Rate your experience" %>
          <%= f.input :review_text, as: :text, label: "Tell us more" %>
          <%= f.button :submit, "Send your review", class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
