<button id="join-button" class="btn btn-success">
      Start the lesson!
</button>
<div class="lesson-show">
  <div class="show-container">

    <div id="remote-video-container" data-current-user-id="<%= current_user.id %>" width="980" height="660">
    </div>
    <div>
      <video id="local-video" autoplay width="509" height="200" ></video>
    </div>

    <div class="classes-description">
      <h3><strong>Today's workout</strong></h3>
        <div class="description-container">
          <h4>Warm up - x2 🚴‍♂️</h4>
            <p>-Hip extensions: 10 reps</p>
            <p>-Hip rotations: 10 reps each leg</p>
          <h4>Repetition 1 💪 - x4</h4>
            <p>-30sec Back Lunge + 30sec Jumping Jacks + 30sec Front Lunge</p>
            <p>-5x Burpees</p>
            <p>-30sec rest</p>
          <h4>Repetition 2 🏋️ - x3</h4>
            <p>-50sec Squats - 10sec Rest</p>
            <p>-50sec Push up - 10sec Rest</p>
            <p>-50sec Mountain climbers - 10sec Rest</p>
          <h4>Repetition 3 🧘 - x2</h4>
            <p>-20x Sit up</p>
            <p>-1min Body core</p>
            <p>-30sec Side Plank each side</p>
          <h4>Congratulations!</h4>
        </div>
    </div>
  </div>
    <hr />
  <div class="btn-dashboard">
    <button type="button" class="btn btn-ghost retour" data-toggle="modal" data-target="#reviewModalCenter">
    Back to my dashboard
    </button>
  </div>
</div>
<div class="modal fade" id="reviewModalCenter" tabindex="-1" role="dialog" aria-labelledby="reviewModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="reviewModalLongTitle">How was your lesson?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for([@lesson, @booking]) do |f| %>
          <%= f.input :review_rating, collection: (1..5).to_a, label: "Rate your experience" %>
          <%= f.input :review_text, as: :text, label: "Tell us more" %>
          <%= f.button :submit, "Send your review", class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
