<div class="card-div">
  <div>
    <div class="card-product">
      <%= cl_image_tag lesson.lesson_picture %>
      <button type="button" class="card-category-top-left" data-toggle="modal" data-target="#specialtyModal">
        <%= lesson.coach.specialty.name %>
      </button>
      <button type="button" class="card-category-top-right" data-toggle="modal" data-target="#coachModal">
        <%= lesson.coach.name %>
      </button>
      <div class="card-infos">
        <p><% description = lesson.lesson_description %>
          <% if description.length >= 15 %>
            <%= description.first(100) + "..." %>
          <% end %>
        </p>
      </div>
      <a href="/lessons/<%= lesson.id %>" class="card-category-bottom-right">Book</a>
    </div>
  </div>
</div>

<div class="modal fade" id="specialtyModal" tabindex="-1" role="dialog" aria-labelledby="specialtyModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="specialtyModalLabel"><%= lesson.coach.specialty.name %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= lesson.coach.specialty.description %>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="coachModal" tabindex="-1" role="dialog" aria-labelledby="coachModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="coachModalLabel"><%= lesson.coach.name %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= lesson.coach.bio %>
        <%= lesson.coach.bio %>
      </div>
    </div>
  </div>
</div>
