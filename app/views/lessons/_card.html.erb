<div class="slick-item">
  <div class="card-lesson">
    <div class="card-product">
      <%= cl_image_tag lesson.lesson_picture %>
      <button type="button" class="card-category-top-left" data-toggle="modal" data-target="#LessonModal<%= lesson.id %>Center">
        <%= lesson.name.capitalize %>
      </button>
      <button type="button" id="coach-button" class="card-category-top-right" data-toggle="modal" data-target="#CoachModal<%= lesson.coach.id %>Center">
        <%= image_tag lesson.coach.avatar_picture, class: "card-category-top-right avatar"%>
      </button>
      <div class="card-infos">
        <% if lesson.appointment.strftime('%A') == Time.now.strftime('%A') %>
          <p>Today at <%= lesson.appointment.strftime('%H') %>H00</p>
        <% else %>
          <p><%= lesson.appointment.strftime('%A') %> at <%= lesson.appointment.strftime('%H') %>H00</p>
        <% end %>
      </div>
      <% if current_user %>
        <%= link_to "Book", lesson_bookings_path(lesson_id: lesson.id), method: :post, class: "card-category-center d-none" %>
      <% else %>
        <%= link_to "Book", new_user_session_path, class: "card-category-center d-none"%>
      <% end %>
     </div>
  </div>
</div>
