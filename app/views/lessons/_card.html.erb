<div class="card-div">
  <div>
    <div class="card-product">
      <%= cl_image_tag lesson.lesson_picture %>
      <button type="button" class="card-category-top-left" data-toggle="modal" data-target="#specialtyModal">
        <%= lesson.name.capitalize %>
      </button>
      <button type="button" class="card-category-top-right" data-toggle="modal" data-target="#coachModal">
        <%= lesson.coach.name.capitalize %>
      </button>
      <div class="card-infos">
        <% if lesson.appointment.strftime('%A') == Time.now.strftime('%A') %>
          <p>Today at <%= (9..20).to_a.sample %>h00</p>
        <% else %>
          <p>Next <%= lesson.appointment.strftime('%A') %> at <%= (9..20).to_a.sample %>h00</p>
        <% end %>
      </div>
      <% if @user %>
        <%= link_to "Book", lesson_bookings_path(user_id: @user, lesson_id: lesson.id), method: :post, class: "card-category-bottom-right" %>
      <% else %>
        <p>Connectez-vous pour pouvoir réserver une séance.</p>
      <% end %>
    </div>
  </div>
</div>

<div class="modal fade" id="specialtyModal" tabindex="-1" role="dialog" aria-labelledby="specialtyModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="specialtyModalLabel"><%= lesson.coach.specialty.name %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= lesson.coach.specialty.description %>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="coachModal" tabindex="-1" role="dialog" aria-labelledby="coachModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="coachModalLabel"><%= lesson.coach.name %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= lesson.coach.bio %>
        <%= lesson.coach.bio %>
      </div>
    </div>
  </div>
</div>
