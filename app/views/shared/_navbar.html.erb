<div class="navbar-lewagon">
  <%= link_to "/", class: "navbar-brand" do %>
    <%= image_tag "sweatr_logo.png", class: 'navbar-brand' %>
  <% end %>

  <ul class="navbar-action-list">
    <!-- bouton Lessons: -->
    <li class="nav-item ">
      <a class="nav-link" href="/lessons">Lessons</a>
    </li>
    <!-- bouton Coaches: -->
    <li class="nav-item ">
      <a class="nav-link" href="/coaches">Coaches</a>
    </li>
    <!-- bouton Avatar: -->
    <% if user_signed_in? %>
      <li class="nav-item dropdown">
        <%= image_tag current_user.avatar_picture, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "My dashboard", "/users/#{current_user.id}/dashboard", class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
    <% else %>
      <li class="nav-item">
        <%= link_to "Login", new_user_session_path, class: "nav-link" %>
      </li>
    <% end %>
  </ul>
</div>
